<odoo>

    <record model="ir.ui.view" id="stock_request_order_form_view">
        <field
            name="name"
        >stock.request.order.form (in stock_request_purchase_request)</field>
        <field name="model">stock.request.order</field>
        <field name="inherit_id" ref="stock_request.stock_request_order_form" />
        <field
            name="groups_id"
            eval="[(4, ref('purchase_request.group_purchase_request_user'))]"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="purchase_request_ids" attrs="{'invisible': True}" />
                <button
                    type="object"
                    name="action_view_purchase_request"
                    class="oe_stat_button"
                    icon="fa-credit-card"
                    attrs="{'invisible': [('purchase_request_count', '=', 0)]}"
                >
                    <field
                        name="purchase_request_count"
                        widget="statinfo"
                        string="Purchase Request"
                    />
                </button>
            </div>
        </field>
    </record>

