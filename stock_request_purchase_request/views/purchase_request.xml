<odoo>

    <record model="ir.ui.view" id="purchase_request_form_view">
        <field
            name="name"
        >purchase.request.form (in stock_request_purchase_request)</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />

        <field
            name="groups_id"
            eval="[(4, ref('stock_request.group_stock_request_user'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_stock_request"
                    class="oe_stat_button"
                    icon="fa-chain"
                    attrs="{'invisible':[('stock_request_count', '=', 0)]}"
                >
                    <field
                        name="stock_request_count"
                        widget="statinfo"
                        string="Stock Requests"
                    />
                    <field name="stock_request_ids" attrs="{'invisible': True}" />
                </button>
            </xpath>
            <xpath expr="//field[@name='line_ids']/form//notebook" position="inside">
                <page name="stock_requests" string="Stock Requests">
                    <field name="stock_request_ids" />
                </page>
            </xpath>
        </field>

    </record>
